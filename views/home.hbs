{{> header}}

<figure id="background-image" title="Gaming survey background image"></figure>

<div class="wrapper">

    <div id="message-output-list">

    </div>
    <div id="feedback-output">
        <div class="feedback-output">
            <p id="new-feedback"></p>
        </div>
    </div>

    <div class="form" id="send-container">
        <h2>Select how you feel:</h2>
        <div class="emotion-wrapper">
            <div class="label">
                <span class="tooltiptext-happy">
                    <div class="tooltip-message-output-happy">
                        <p class="tooltip-new-message-happy">Happy message</p>
                    </div>
                    <p>... is feeling Happy 😁</p>
                </span>
                <button id="happy" value="happy">Happy 😁</button>
            </div>
            <div class="label">
                <span class="tooltiptext-angry">
                    <div class="tooltip-message-output-angry">
                        <p class="tooltip-new-message-angry">Angry message</p>
                    </div>
                    <p>... is feeling Angry 😠</p>
                </span>
                <button id="angry" value="angry">Angry 😠</button>
            </div>
            <div class="label">
                <span class="tooltiptext-anxious">
                    <div class="tooltip-message-output-anxious">
                        <p class="tooltip-new-message-anxious">Anxious message</p>
                    </div>
                    <p>... is feeling Anxious 😨</p>
                </span>
                <button id="anxious" value="anxious">Anxious 😨</button>
            </div>
            <div class="label">
                <span class="tooltiptext-sad">
                    <div class="tooltip-message-output-sad">
                        <p class="tooltip-new-message-sad">Sad message</p>
                    </div>
                    <p>... is feeling Sad 😔</p>
                </span>
                <button id="sad" value="sad">Sad 😔</button>
            </div>
            <div class="label">
                <span class="tooltiptext-confused">
                    <div class="tooltip-message-output-confused">
                        <p class="tooltip-new-message-confused">Confused message</p>
                    </div>
                    <p>... is feeling Confused 😲</p>
                </span>
                <button id="confused" value="confused">Confused 😲</button>
            </div>
            <div class="label">
                <span class="tooltiptext-excitement">
                    <div class="tooltip-message-output-excitement">
                        <p class="tooltip-new-message-excitement">Excited message</p>
                    </div>
                    <p>... is feeling Excited 😬</p>
                </span>
                <button id="excitement" value="excitement">Excitement 😬</button>
            </div>
            <div class="label">
                <span class="tooltiptext-disgust">
                    <div class="tooltip-message-output-disgust">
                        <p class="tooltip-new-message-disgust">Disgust message</p>
                    </div>
                    <p>... is feeling Disgusted 🤮</p>
                </span>
                <button id="disgust" value="disgust">Disgust 🤮</button>
            </div>
        </div>
        <div class="message-box-wrapper">
            <input type="text" id="message" autocomplete="off" placeholder="Type your message..." autofocus>
            <img class="paste" src="/images/back-arrow.svg" alt="paste text">
            <img class="microphone" src="/images/microphone.svg" alt="speech now!">
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>